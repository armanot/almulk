        const tableBody = document.getElementById("quranTable");

        for (let i = 0; i < ayatData.length; i++) {
            const row = document.createElement("tr");

            row.innerHTML = `
                <td>${i + 1}</td>
                <td>${ayatData[i].ayat}</td>
                <td>${ayatData[i].meaning}</td>
